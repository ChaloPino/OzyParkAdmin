@using OzyParkAdmin.Domain.CentrosCosto;
@using OzyParkAdmin.Domain.Entidades
@inject TarifaProductoCreateModelValidator Validator
<MudDialog Options="DialogOptions" Visible="IsOpen" VisibleChanged="ChangeIsOpen">
    <DialogContent>
        <MudText Typo="Typo.h4" GutterBottom="true">Crear tarifas de Producto</MudText>
        <IfThen Condition="loading">
            <Then>
                <MudProgressLinear Color="@Color.Primary" Class="mud-table-loading-progress" Indeterminate="true" />
            </Then>
        </IfThen>
        <MudForm @ref="form" Model="tarifaProducto" Validation="Validator.ValidateValue" ValidationDelay="0">
            <MudGrid>
                <MudItem xs="12" md="4">
                    <MudDatePicker @bind-Date="tarifaProducto.InicioVigencia"
                                   Label="Inicio vigencia"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense"
                                   Class="mt-4"
                                   ImmediateText="true"
                                   MinDate="DateTime.Today"
                                   For="() => tarifaProducto.InicioVigencia" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTimePicker @bind-Time="tarifaProducto.HoraVigencia"
                                   Label="Hora vigencia"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense"
                                   Class="mt-4"
                                   ImmediateText="true"
                                   For="() => tarifaProducto.HoraVigencia" />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudSelect @bind-Value="tarifaProducto.Moneda"
                               T="Moneda"
                               Label="Moneda"
                               Variant="Variant.Outlined"
                               Margin="Margin.Dense"
                               Class="mt-6"
                               For="() => tarifaProducto.Moneda"
                               ToStringFunc="x => x?.Nombre">
                        <ForIn Items="Monedas" Context="moneda">
                            <MudSelectItem Value="moneda" />
                        </ForIn>
                    </MudSelect>
                </MudItem>
            </MudGrid>

            @* <MudSelect T="CentroCostoInfo"
                       Value="tarifaProducto.CentroCosto"
                       ValueChanged="OnChangeCentroCostoAsync"
                       Label="Centro de costo"
                       Variant="Variant.Outlined"
                       Margin="Margin.Dense"
                       Dense="true"
                       Class="mt-4"
                       For="() => tarifaProducto.CentroCosto"
                       ToStringFunc="x => x?.Descripcion">
                <ForIn Items="CentrosCosto" Context="centroCosto">
                    <MudSelectItem Value="centroCosto" />
                </ForIn>
            </MudSelect> *@

            <MudAutocomplete @bind-Value="tarifaProducto.Producto"
                             Label="Producto"
                             Variant="Variant.Outlined"
                             Margin="Margin.Dense"
                             Dense="true"
                             Class="mt-4"
                             For="() => tarifaProducto.Producto"
                             ToStringFunc="x => x?.Nombre"
                             SearchFunc="OnSearchProductosAsync" />


            <MudSelect @bind-SelectedValues="tarifaProducto.CanalesVenta"
                       Label="Canales de venta"
                       Variant="Variant.Outlined"
                       Margin="Margin.Dense"
                       Dense="true"
                       SelectAll="true"
                       SelectAllText="Todos"
                       MultiSelection="true"
                       Class="mt-4"
                       For="() => tarifaProducto.ValidationCanalesVenta"
                       ToStringFunc="x => x?.Nombre">
                <ForIn Items="CanalesVenta" Context="canalVenta">
                    <MudSelectItem Value="canalVenta" />
                </ForIn>
            </MudSelect>

            <MudSelect @bind-SelectedValues="tarifaProducto.TiposDia"
                       Label="Tipos de día"
                       Variant="Variant.Outlined"
                       Margin="Margin.Dense"
                       Dense="true"
                       MultiSelection="true"
                       Class="mt-4"
                       For="() => tarifaProducto.ValidationTiposDia"
                       ToStringFunc="x => x?.Descripcion">
                <ForIn Items="TiposDia" Context="tipoDia">
                    <MudSelectItem Value="tipoDia" />
                </ForIn>
            </MudSelect>

            <MudSelect @bind-SelectedValues="tarifaProducto.TiposHorario"
                       Label="Tipos de horario"
                       Variant="Variant.Outlined"
                       Margin="Margin.Dense"
                       Dense="true"
                       MultiSelection="true"
                       Class="mt-4"
                       For="() => tarifaProducto.ValidationTiposHorario"
                       ToStringFunc="x => x?.Descripcion">
                <ForIn Items="TiposHorario" Context="tipoHorario">
                    <MudSelectItem Value="tipoHorario" />
                </ForIn>
            </MudSelect>

            <MudGrid>
                <MudItem md="4">
                    <MudNumericField @bind-Value="tarifaProducto.ValorAfecto"
                                     Label="Valor afecto"
                                     Variant="Variant.Outlined"
                                     Margin="Margin.Dense"
                                     Immediate="true"
                                     Class="mt-4"
                                     For="() => tarifaProducto.ValorAfecto" />
                </MudItem>
                <MudItem md="4">
                    <MudNumericField @bind-Value="tarifaProducto.ValorExento"
                                     Label="Valor exento"
                                     Variant="Variant.Outlined"
                                     Margin="Margin.Dense"
                                     Immediate="true"
                                     Class="mt-4"
                                     For="() => tarifaProducto.ValorExento" />
                </MudItem>
                <MudItem md="4">
                    <MudField Label="Valor"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Class="mt-4">
                        @tarifaProducto.Valor
                    </MudField>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="CancelEditingItemAsync" Disabled="loading" Class="px-10">Cancelar</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CommitItemChangesAsync" Disabled="loading" Class="px-10">Guardar</MudButton>
    </DialogActions>
</MudDialog>
